<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Register"
    android:background="@drawable/background"
    android:id="@+id/rootContainerregister"
    >

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

        <ImageView
            android:id="@+id/logoemail"
            android:layout_width="211sp"
            android:layout_height="204sp"
            android:layout_gravity="center"
            android:src="@drawable/logo"
            android:transitionName="reveal"/>

        <ImageView
            android:id="@+id/secbox"
            android:layout_width="352sp"
            android:layout_height="415dp"
            android:layout_gravity="center"
            android:src="@drawable/secbox" />
    </LinearLayout>

    <ScrollView
        android:id="@+id/childContaineremail"
        android:layout_width="308dp"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="300dp"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textColorHint="#3D78BF">

                    <EditText
                        android:id="@+id/firstname"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:ellipsize="start"
                        android:gravity="center|center_vertical"
                        android:hint="Firstname"
                        android:textColorHighlight="#5196E9"
                        android:textColorHint="#3D78BF"


                        />
                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textColorHint="#3D78BF">

                    <EditText
                        android:id="@+id/lastname"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/secbox"
                        android:layout_marginTop="10dp"
                        android:layout_weight="1"
                        android:ellipsize="start"
                        android:gravity="center|center_vertical"
                        android:hint="Lastname"
                        android:textColorHighlight="#5196E9"
                        android:textColorHint="#3D78BF" />
                </android.support.design.widget.TextInputLayout>

            </LinearLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:textAlignment="center"
                android:textColorHint="#3D78BF">

                <EditText
                    android:id="@+id/emailIDemail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/secbox"
                    android:layout_marginTop="10dp"
                    android:layout_weight="1"
                    android:ellipsize="start"
                    android:gravity="center"
                    android:hint="Email ID"
                    android:textColorHighlight="#5196E9"
                    android:textColorHint="#3D78BF" />

            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:textAlignment="center"
                android:textColorHint="#3D78BF">

                <EditText
                    android:id="@+id/passEmail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/secbox"
                    android:layout_marginTop="10dp"
                    android:layout_weight="1"
                    android:ellipsize="start"
                    android:gravity="center"
                    android:hint="Password"
                    android:textColorHighlight="#5196E9"
                    android:textColorHint="#3D78BF" />

            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:textAlignment="center"
                android:textColorHint="#3D78BF">

                <EditText
                    android:id="@+id/confirmpassemail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/secbox"
                    android:layout_marginTop="10dp"
                    android:layout_weight="1"
                    android:ellipsize="start"
                    android:gravity="center"
                    android:hint="Confirm Password"
                    android:textColorHighlight="#5196E9"
                    android:textColorHint="#3D78BF" />
            </android.support.design.widget.TextInputLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/regEmailBTN"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/buttonsimple"
                    android:text="Register with Email"
                    android:textColor="#FFF" />

                <Button
                    android:id="@+id/regMobileBTN"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/buttonsimple"
                    android:text="Register With Phone"
                    android:textColor="#FFF" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>



</android.support.constraint.ConstraintLayout>